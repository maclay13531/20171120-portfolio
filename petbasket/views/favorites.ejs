<!DOCTYPE html>

    <head>
        <% include head %>
        <title>Pet Basket - Favorites</title>

    </head>
    <body>
		<% include navbar %>
		<main>
			<div class="container">
				<h3><%=locals.firstNameTest%>'s Favorites</h3>
				<% for(let i =0; i<data.length; i++){ %>
				<div class="row">
					<div class="col s12">
						<h4 class="header listings-pet-name"><%=data[i].name%></h4>
						<div class="card horizontal card-page hoverable">
							<div class="card-image">
								<img src="<%=photo[i]%>" width="100%" height="300px">
							</div>
							<div class="card-stacked">
								<div class="card-content card-description">
									<p><%=data[i].descriptionPlain%></p>
								</div>
								<div class="card-action">
									<div class="col s4"> 
										<!-- breed -->
										Breed: <%=data[i].breed%>
									</div>
									<div class="col s4">
										Age: <%=data[i].age%>
									</div>
									<div class="col s4">
										Location: <%=data[i].animalLocation%>
									</div>
									<div class="right-align">
										<% if (locals.firstNameTest !== undefined){ %>
										<a href="/delete/<%=data[i].animalID%>" class="btn grey pulse"><i class="material-icons right">highlight_off</i>Delete</a>
										<a href="/singles/<%=data[i].animalID%>" class="btn-floating btn-large red pulse"><i class="material-icons">add</i></a>
										<% }else{ %>
										<a href="/delete/<%=data[i].animalID%>" class="btn grey pulse"><i class="material-icons right">highlight_off</i>Delete</a>
										<a href="#" class="btn-floating btn-large red pulse" onclick="Materialize.toast('Must Login To View Detail', 4000)"><i class="material-icons">add</i></a>
										<% } %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			<div class="divider"></div>
			<%}%>
			</div>
		</main>
		<% include footer %>
    </body>
</html>