<!DOCTYPE html>

    <head>
        <% include head %>
        <title>Log In</title>

    </head>
    <body>
   		<% include navbar %>
     <main>
		<div class="container">
			<% include searchBar %>
			<% for(let i =0; i<petsDb.length; i++){ %>
				<div class="row">
					<div class="col s12">
						<h4 class="header listings-pet-name"><%=petsDb[i].name%></h4>
						<div class="card horizontal card-page hoverable">
							<div class="card-image">
								<img src="<%=photo[i]%>" width="100%" height="300px">
							</div>
							<div class="card-stacked">
								<div class="card-content card-description">
									<p><%=petsDb[i].descriptionPlain%></p>
								</div>
								<div class="card-action">
									<div class="col s6">
										Age: <%=petsDb[i].age%>
									</div>
									<div class="right-align">
										<% if (locals.firstNameTest !== undefined){ %>
										<a href="/favorites/<%=petsDb[i].animalID%>" class="btn grey pulse"><i class="material-icons right">favorite</i>Favorite</a>
										<a href="/singles/<%=petsDb[i].animalID%>" class="btn-floating btn-large red pulse"><i class="material-icons">add</i></a>
										<% }else{ %>
										<a href="#" class="btn grey pulse" onclick="Materialize.toast('Must Login To Favorite', 4000)"><i class="material-icons right">favorite</i>Favorite</a>
										<a href="#" class="btn-floating btn-large red pulse" onclick="Materialize.toast('Must Login To View Detail', 4000)"><i class="material-icons">add</i></a>
										<% } %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			<div class="divider"></div>
			<%}%>
		</div>
	</main>
    <% include footer %>

    </body>
</html>