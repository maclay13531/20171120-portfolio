<!DOCTYPE html>

    <head>
        <% include head %>
        <title>Log In</title>

    </head>
    <body>
   		<% include navbar %>
     <main>
		<div class="container">
			<% include searchBar %> 
			<div class="row">
				<div class="col s12">
					<h3>Featured</h3>
				</div>
			</div>
			<div class="row">
				<div class="col s12">
					<h4 class="header listings-pet-name"><%=name%></h4>
					<div class="card horizontal card-page hoverable">
						<div class="card-image">
							<img src="<%=photo%>" width="100%" height="300px">
						</div>
						<div class="card-stacked">
							<div class="card-content card-description">
								<h5>Get to know <%=name%>:</h5>
								<p><%=description%></p>
							</div>
							<div class="card-action">
								<div class="col s4">
									<b>Breed: </b><%=breed%>
								</div>
								<div class="col s4">
									<b>Age: </b><%=age%>
								</div>
								<div class="col s4">
									<b>Location: </b> <%=location%>
								</div>
								<div class="right-align">
									<% if (locals.firstNameTest !== undefined){ %>
									<a href="/favorites/<%=id%>" class="btn grey pulse"><i class="material-icons right">favorite</i>Add To Favorites</a>
									<a href="/singles/<%=id%>" class="btn-floating btn-large grey pulse"><i class="material-icons">add</i></a>
									<% }else{ %>
									<a href="/favorites/<%=id%>" class="btn grey pulse" onclick="Materialize.toast('Must Login To Add Favorite', 4000)"><i class="material-icons right">favorite</i>Add To Favorites</a>
									<a href="#" class="btn-floating btn-large grey pulse" onclick="Materialize.toast('Must Login To View Detail', 4000)"><i class="material-icons">add</i></a>
									<% } %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="divider"></div>
		</div>
	</main>
    <% include footer %>

    </body>
</html>